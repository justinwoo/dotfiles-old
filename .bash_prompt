# Sexy Bash Prompt
# as taken from https://github.com/gf3/dotfiles
# additional functionality added by me

if [[ $COLORTERM = gnome-* && $TERM = xterm ]]  && infocmp gnome-256color >/dev/null 2>&1; then export TERM=gnome-256color
elif [[ $TERM != dumb ]] && infocmp xterm-256color >/dev/null 2>&1; then export TERM=xterm-256color
fi

if tput setaf 1 &> /dev/null; then
    tput sgr0
    if [[ $(tput colors) -ge 256 ]] 2>/dev/null; then
      MAGENTA=$(tput setaf 9)
      ORANGE=$(tput setaf 172)
      GREEN=$(tput setaf 190)
      TRUEGREEN=$(tput setaf 050)
      PURPLE=$(tput setaf 141)
      WHITE=$(tput setaf 0)
      RED=$(tput setaf 1)
    else
      MAGENTA=$(tput setaf 5)
      ORANGE=$(tput setaf 4)
      GREEN=$(tput setaf 2)
      PURPLE=$(tput setaf 1)
      WHITE=$(tput setaf 7)
    fi
    BOLD=$(tput bold)
    RESET=$(tput sgr0)
else
    MAGENTA="\033[1;31m"
    ORANGE="\033[1;33m"
    GREEN="\033[1;32m"
    PURPLE="\033[1;35m"
    WHITE="\033[1;37m"
    BOLD=""
    RESET="\033[m"
fi

parse_git_dirty () {
  [[ $(git status 2> /dev/null | tail -n1 | cut -c 1-17) != "nothing to commit" ]] && echo "*"
}
parse_git_branch () {
  git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e "s/* \(.*\)/\1$(parse_git_dirty)/"
}
parse_commits_ahead () {
  [[ $(git status 2> /dev/null | grep ahead) != "" ]] && ahead='+'$(git status | grep -Eo '\d+')
}
parse_commits_behind () {
  [[ $(git status 2> /dev/null | grep behind) != "" ]] && behind='-'$(git status | grep -Eo '\d+')
}
parse_commits_status () {
  parse_commits_ahead
  parse_commits_behind
  if [[ $ahead || $behind ]]
  then
    echo $WHITE'('$TRUEGREEN$ahead$RED$behind$WHITE')'
  else
    echo $WHITE'(0)'
  fi
}

PS1="\[${BOLD}${MAGENTA}\]@\u \[$WHITE\]at \[$ORANGE\]\h \[$WHITE\]in \[$GREEN\]\w \
\$(if [[ -n \$(git branch 2> /dev/null) ]]
then
echo $WHITE\"on \[$PURPLE\]\$(parse_git_branch) \$(parse_commits_status)\"
fi) \
\[$WHITE\]\n\$ \[$RESET\]"
